<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_corner"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/pageViewToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="76dp"
                    android:layout_marginEnd="92dp"
                    android:fontFamily="@font/bmjua"
                    android:gravity="center"
                    android:text="유저이름"
                    android:textColor="@android:color/black"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16dp"
                    android:autoSizeMaxTextSize="28dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/bmjua"
                    android:text="삭제"
                    android:textColor="@color/MainColor"
                    android:textSize="20dp"
                    android:visibility="invisible"
                    tools:ignore="SpUsage" />

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/followToggle"
                    android:layout_width="65dp"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="1dp"
                    android:textOff="팔로우"
                    android:textOn="팔로잉"
                    android:textSize="16dp"
                    android:fontFamily="@font/bmjua"
                    android:visibility="visible"
                    app:borderWidth="2dp"
                    app:checkedColor="@color/MainColor"
                    app:checkedTextColor="@color/colorWhite"
                    app:radius="3dp"
                    app:uncheckedColor="@color/colorWhite"
                    app:uncheckedTextColor="@color/MainColor"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/img_coupon"
                    android:layout_width="65dp"
                    android:layout_height="0dp"
                    android:layout_alignTop="@+id/userName"
                    android:layout_alignBottom="@+id/userName"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="1dp"
                    android:visibility="gone"
                    android:src="@drawable/ic_coupon"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

</merge>
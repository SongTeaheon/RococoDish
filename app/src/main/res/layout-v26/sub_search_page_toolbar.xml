<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bottom_corner"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/pageViewToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@mipmap/ic_back" />

                <!--여기 TextView를 터치하면 다시 main_search_page로 가게 하는 것이 가장 편할 듯 합니당-->
                <TextView
                    android:id="@+id/searchStore"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@+id/search_btn0"
                    android:layout_toEndOf="@+id/backButton"
                    android:fontFamily="@font/bmjua"
                    android:paddingStart="12dp"
                    android:text="검색된 가게"
                    android:gravity="center_vertical"
                    android:textColor="@color/GGrey"
                    android:textSize="20dp"
                    android:background="@drawable/searchEditText"
                    tools:ignore="SpUsage" />

                <ImageView
                    android:id="@+id/search_btn0"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@mipmap/ic_search"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

</merge>